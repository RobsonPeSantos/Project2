            <form action="/login" method="POST">
            <h1>Login</h1>
            <div class="formcontainer">
                <hr/>
                <div class="container">
                    <label class="form-color" for="username"><strong>Email</strong></label>
                    <input type="text" placeholder="Enter Username" name="email" required>
                    <label class="form-color" for="psw"><strong>Password</strong></label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                </div>
                <button type="submit">GO!</button>
                <div class="container" style="background-color: #eee">
                    <label class="remember" style="padding-left: 15px">
                        <input style="color:black" type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                    <span class="psw"><a href="/signup">Sign-up</a></span>
                </div>
            </form>
        </div>
